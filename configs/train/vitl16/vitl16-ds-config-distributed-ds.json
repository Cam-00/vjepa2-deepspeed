{
  "train_micro_batch_size_per_gpu": 96,
  "gradient_accumulation_steps": 1,
  "steps_per_print": 10,
  "wall_clock_breakdown": false,
  "dump_state": false,

  "fp16": {
    "enabled": false,
    "auto_cast": false,
    "loss_scale": 0,
    "loss_scale_window": 100,
    "initial_scale_power": 12,
    "hysteresis": 2,
    "min_loss_scale": 1,
    "fp16_master_weights_and_grads": false
  },

  "bf16": {
    "enabled": true
  },

  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "none",
